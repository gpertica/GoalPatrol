<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Goal Patrol</title>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.css" rel="stylesheet">
    <link href="css/GoalPatrol.css" rel="stylesheet">
    <script src="js/angular.1.2.26.min.js"></script>
    <script src="js/jquery-1.11.2.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/GoalPatrolScript.js"></script>

  </head>

  <body>

    <!-- Header: Title & Name -->
  	<div class="header-container container">
      <h1 id="title">Goal Patrol</h1>

      <!-- Name & Settings Dropdown Menu -->
      <div class="dropdown" id="dropdown-icon">
        <h2 class="btn btn-default dropdown-toggle" 
            id="name-icon" data-toggle="dropdown">
            Bob
            <span class="caret"></span>
        </h2>
        <ul class="dropdown-menu" role="menu" aria-labelledby="name-icon" id="name-menu">
          <li role="presentation">
            <a role="menuitem" tabindex="-1" href="/settings">Settings</a>
          </li>
          <li role="presentation" class="divider"></li>
          <li role="presentation">
            <a role="menuitem" tabindex="-1" href="/help">Help</a>
          </li>
          <li role="presentation" class="divider"></li>
          <li role="presentation">
            <a role="menuitem" tabindex="-1" href="/index">Logout</a>
          </li>                   
        </ul>        
      </div>

      <!-- Send Goal Button -->
      <div id="sendgoal-icon">
        <h2 class="btn btn-warning" type="button" onclick="window.location.href='sendgoal'">Send Goal</h2>
      </div> 
  	</div>

    <br> <!--Extra spacing-->

    <!-- Goal Requests -->
    <div class="goalrequest-container container ">
      <h3>New Goal Request!</h3>
      <p>From: Jenny<br>
         Goal: Go to the gym. 1 hours 5 times a week.<br>
         Complete Date: 02/15/2015
      </p>
      <button class="btn btn-block" onclick="window.location.href='setgoal'"> Accept</button>
      <button class="btn btn-block AccRej">Decline</button>
    </div>


    <!-- Goals -->
    <div class="central-container container">
      <section ng-app="myApp" ng-controller="TabController as tab">
        
        <!-- GOAL HOME PAGE TAB1-->
        <div ng-show="tab.isSet(1)">
          <p>
            <h3>Your Goals</h3>

            <!-- Container for all goals -->
            <div class="goal-container container">

              <!-- Goal - hardcoded with Jenny -->
              <div class="individual-goal container">
                <img class="avatar-image" src="/images/alex.jpg">
                <p class="patrol-info"><b>Patrol:</b>
                  <a href ng-click="tab.setTab(2)">Jenny</a>
                </p>
                <p class="bubble">Go to the gym for 1 hour 3 times a week.</p>
                <button class="btn btn-lg btn-success alert" id="inspire1">Inspire Me</button>
                <button class="btn btn-lg btn-info alert" id="progress1" onclick="window.location.href='trackprogress'">Track Progress</button>
              </div>

              <!-- Goal - hardcoded with Mary -->
              <div class="individual-goal container">
                <img class="avatar-image" src="/images/mary.jpg">
                <p class="patrol-info"><b>Patrol:</b>
                  <a href ng-click="tab.setTab(3)">Mary</a>
                </p>
                <p class="bubble">Eat a salad everyday.</p>
                <button class="btn btn-lg btn-success alert" id="inspire2">Inspire Me</button>
                <button class="btn btn-lg btn-info alert" id="progress2" onclick="window.location.href='trackprogress'">Track Progress</button>
              </div>

            </div>
          </p>
        </div>

        <!-- JENNY'S STUFF -->
        <div ng-show="tab.isSet(2)">
          <p>
            <h3>Jenny's Goal</h3><br>

            <button class="btn btn-xs">
              <a href ng-click="tab.setTab(1)">&lt;- Back</a>
            </button>
            <div class="goal-container container">
          	 Show Jenny's information
            </div>
          </p>
        </div>

        <!-- Mary's stuff -->
        <div ng-show="tab.isSet(3)">
          <p>
            <h3>Mary's Goal</h3><br>
            
            <button class="btn btn-xs">
              <a href ng-click="tab.setTab(1)">&lt;- Back</a>
            </button>
            <div class="goal-container container">
              Show Mary's information
            </div>
          </p>
        </div> 

      </section>  
    </div>

  </body>

</html>
