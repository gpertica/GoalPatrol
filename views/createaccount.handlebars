<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Goal Patrol - Create Account</title>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.css" rel="stylesheet">
    <link href="css/GoalPatrol.css" rel="stylesheet">
    <script src="js/angular.1.2.26.min.js"></script>
    <script src="js/jquery-1.11.2.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/GoalPatrolScript.js"></script>

  </head>

  <body>

    <!-- Header: Title & Name -->
    <div class="header-container container">
      <a href="/index"><h1 id="title">Goal Patrol</h1></a>
    </div>

    <br><!--Extra spacing-->

    <!-- Goal Giving -->
    <div class= "container">

      <h2>New User</h2>

      <br>

      <form role="form">
        <div class="row">
            <div class="form-group">
                <input type="text" class="form-control input-lg" placeholder="Name">
            </div>
        </div>
      </form>

      <form role="form">
        <div class="row">
            <div class="form-group">
                <input type="email" class="form-control input-lg" placeholder="Email">
            </div>
        </div>
      </form>

      <form role="form">
        <div class="row">
            <div class="form-group">
                <input type="password" class="form-control input-lg" placeholder="Password">
            </div>
        </div>
      </form>

      <form role="form">
        <div class="row">
            <div class="form-group">
                <input type="password" class="form-control input-lg" placeholder="Confirm Password">
            </div>
        </div>
      </form>

      <br>

      <div>
        <h2 class="btn btn-info btn-block" type="button" onclick="window.location.href='/sendgoal'">Sign Up</h2>
      </div> 

      
      </section>  
    </div>

  </body>

</html>
